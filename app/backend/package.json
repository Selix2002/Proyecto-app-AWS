{
  "name": "proyect1",
  "version": "1.0.0",
  "type": "module",
  "main": "app.mjs",
  "scripts": {
    "start": "node server.mjs && echo 'http://localhost:3000/libreria/index.html'",
    "build:lambda": "esbuild src/lambda/handler.mjs --bundle --platform=node --format=cjs --target=node20 --outfile=dist/handler.js --sourcemap",
    "zip:lambda": "rm -f lambda.zip && cd dist && zip -r ../lambda.zip .",
    "clean:lambda": "rm -rf dist lambda.zip",
    "package:lambda": "npm run clean:lambda && npm ci && npm run build:lambda && npm run zip:lambda"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.954.0",
    "@aws-sdk/client-dynamodb": "^3.954.0",
    "@aws-sdk/lib-dynamodb": "^3.954.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.2",
    "serverless-http": "^4.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.27.2"
  }
}
